<div class=" text-white text-center py-20" style="background-color: #2f622f">
  <h1 class="text-5xl font-bold mb-4">Cutting Corner</h1>
  <p class="text-xl mb-8">Your Neighborhood Plant Cutting E-Commerce</p>
  <%= link_to "Shop Now", root_path, class: "bg-lime-500 hover:bg-lime-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="flex flex-wrap justify-center items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <h2 class="text-gray-800 mt-8 font-medium text-lg text-center mb-6">
          <%= category.name %>
        </h2>
        <% if category.image.attached? %>
          <%= cl_image_tag category.image.key, class: "w-112 h-112" %>
        <% else %>
          <%= image_tag 'noimage.jpg', class: "w-128 h-128 object-cover" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="py-20 my-10" style="background-color: #a1bca1">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-8">
      Customer Testimonials
    </h2>
    <div class="flex flex-wrap justify-center">
      <div class="w-full md:w-1/3 px-4 mb-8 flex">
        <div class="bg-white p-6 rounded-lg shadow-lg flex-grow">
          <p class="text-gray-800 text-base mb-4">
            "Cutting Corner's plants arrived perfect! Great selection and care info. Will order again!"
          </p>
          <p class="text-gray-500 text-xs">
            - Jane Doe
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-4 mb-8 flex">
        <div class="bg-white p-6 rounded-lg shadow-lg flex-grow">
          <p class="text-gray-800 text-base mb-4">
            "Helpful customer service and healthy plants! Perfect for beginners. Highly recommend Cutting Corner."
          </p>
          <p class="text-gray-500 text-xs">
            - John Smith
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-4 mb-8 flex">
        <div class="bg-white p-6 rounded-lg shadow-lg flex-grow">
          <p class="text-gray-800 text-base mb-4">
            "Unique plants and eco-friendly! Cutting Corner is my go-to for rare finds. Fast shipping, too!"
          </p>
          <p class="text-gray-500 text-xs">
            - Alice Johnson
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class=" text-white my-10 text-center py-20" style="background-color: #a1bca1">
  <h2 class="text-3xl font-bold mb-6">
    Stay Updated
  </h2>
  <p class="mb-8">
    Subscribe to our newsletter to get the latest updates on our products and promotions!
  </p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your Email", class: "bg-white p-2 rounded-l text-gray-800" %>
    <%= submit_tag "Subscribe", class: "bg-lime-700 hover:bg-lime-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>
